{
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "build",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["build", "node_modules"],
	"ts-node": {
		"esm": true
	}
}
