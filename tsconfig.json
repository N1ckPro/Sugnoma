{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "NodeNext",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
    },
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}